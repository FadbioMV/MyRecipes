---
import { getCollection } from "astro:content";
const allCollection = await getCollection("recipes")

import CardRecipes from "./Card/CardRecipes.astro"
const b = 'border shadow-md shadow-slate-700'

---

<div     class="m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-rows-8 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
>
{
    allCollection.map(post=>(
    <CardRecipes title={post.data.title} colSpan={post.data.colSpan} rowSpan={post.data.rowSpan} href={`/posts/${post.slug}/`}/>
    ))
}


</div>
